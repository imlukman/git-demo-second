<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
     
     <context:property-placeholder location="classpath:coach-details.properties"/>
     <bean id="cricketCoach" class="core.CricketCoach">
     </bean>
     <bean id="hockeyCoach" class="core.HockeyCoach">
     	<property name="name" value="${coach.hockey.name}"></property>
     	<property name="id" value="${coach.hockey.id}"></property>
     </bean>
     <bean id="tennisCoach" class="core.TennisCoach">
     	<constructor-arg name="name" value="${coach.tennis.name}"></constructor-arg>
     	<constructor-arg name="id" value="${coach.tennis.id}"></constructor-arg>
     	<constructor-arg name="shot" value="${coach.tennis.shot}"></constructor-arg>
     	<constructor-arg name="slots" value="${coach.tennis.slots}"></constructor-arg>
     </bean>
</beans>    